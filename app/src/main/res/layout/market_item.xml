<?xml version="1.0" encoding="utf-8"?>
<com.example.test.utils.rewriting_view.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/shop_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_stock_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:textSize="20sp" />

    </LinearLayout>

</com.example.test.utils.rewriting_view.SquareFrameLayout>